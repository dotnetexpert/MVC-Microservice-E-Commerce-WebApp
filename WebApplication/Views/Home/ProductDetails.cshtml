@using System.Globalization
@model ProductDto
<form method="post">
  
    <input asp-for="ProductId" hidden />
    <div class="pt-5">
        <div class="card container" style="border:1px solid #808080;">
            <div class="card-header bg-dark text-light row" style="border-radius: 1px;">
                <div class="col-12 col-md-6">
                    <h1 class="text-white">@Model.Name</h1>
                </div>
                <div class="col-12 col-md-6 text-end">
                    <h1 class="text-warning">@Model.Price.ToString("c", CultureInfo.GetCultureInfo("hi-IN"))</h1>
                </div>
            </div>
            <div class="card-body">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-12 col-lg-4 p-1 text-center">
                            <img src="@Model.ImageUrl" style="border-radius:35px;" width="100%" class="rounded" />
                        </div>
                        <div class="col-12 col-lg-8">
                            <div class="row pl-3">
                                <div class="col-12">
                                    <p class="text-black pt-3">@Model.CategoryName</p>
                                    <div>
                                        <label>Description:-</label>
                                        <p class="text-black pt-3">@Html.Raw(Model.Description)</p>
                                    </div>                                   
                                </div>
                            </div>
                            <div class="row mx-0">
                                <label><b>Product Ability  <p>@Model.Count</p> </b></label>                               
                            </div>
                            @if (Model.Count==0)
                            {
                                <div class="row mx-0">
                                    <input disabled value="0" asp-for="Count" class="form-control" id="countInput" type="number" min="1" max="@Model.Count" />
                                    <span asp-validation-for="Count" class="text-danger"></span>
                                </div>
                            }
                            else
                            {
                                <div class="row mx-0">
                                    <input value="1" asp-for="Count" class="form-control" id="countInput" type="number" min="1" max="@Model.Count" />
                                    <span asp-validation-for="Count" class="text-danger"></span>
                                </div>
                            }

                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer row">
                <div class="col-12 col-md-6 pb-1 ">
                    <a asp-action="Index" class="btn btn-success btn-square form-control btn-lg" style="height:50px;">Back to List</a>
                </div>
                @if (Model.Count==0)
                {
                    <div class="col-12 col-md-6 ">
                        <button disabled type="submit" class="btn btn-primary form-control btn-lg" style="height:50px;">Add to Cart</button>
                    </div>
                }
                else
                {
                    <div class="col-12 col-md-6 ">
                        <button type="submit" class="btn btn-primary form-control btn-lg" style="height:50px;">Add to Cart</button>
                    </div>
                }
               
            </div>
        </div>
    </div>
</form>
<script src="~/js/count.js"></script>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

