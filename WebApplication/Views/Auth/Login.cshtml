@model LoginRequestDto

<form method="post">
    <br />
    <br />
    <br />
    <div class="container border p-5 mb-4">
        <div class="row text-center">
            <h1 class="text-white">Login</h1>
        </div>
        <div class="row">
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <label class="text-white" for="datepicker">UserEmail</label>
                <input type="text" asp-for="UserName" class="form-control" placeholder="Username..." />
                <span asp-validation-for="UserName" class="text-danger" />
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <label class="text-white" for="datepicker">Password</label>
                <input type="password" asp-for="Password" class="form-control" placeholder="Password..." />
                <span asp-validation-for="Password" class="text-danger" />
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <div class="loader" style="display: none;"></div>
                <br />
                <button type="submit" class="form-control btn btn-success" value="Submit">Login</button>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}