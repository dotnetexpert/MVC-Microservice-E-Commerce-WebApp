@model List<UserDto>

@{
    ViewData["Title"] = "All Users";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-dark bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="text-white">All User List</h1>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        @if (Model.Any())
        {
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Username</th>
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Phone Number</th>
                        <th scope="col">Date</th>
                        <th scope="col">Country</th>
                        <th scope="col">State</th>
                        <th scope="col">Address</th>
                        @* <th scope="col">Active</th> *@
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.UserName</td>
                            <td>@user.Name</td>
                            <td>@user.Email</td>
                            <td>@user.PhoneNumber</td>
                            <td>@user.Date</td>
                            <td>@user.Counrty</td>
                            <td>@user.State</td>
                            <td>@user.Address</td>
                            @*   <td class="@(user.IsActive ? "active-yes" : "active-no")">@if (user.IsActive) { "Yes" } else { "No" }</td> *@
                            <td>
                                <div class="d-flex">
                                    @*    @if (user.IsActive)
                            {
                            <button class="btn btn-sm btn-danger me-2">Lock</button>
                            }
                            else
                            {
                            <button class="btn btn-sm btn-success me-2">Unlock</button>
                            } *@
                                    <form method="post" asp-controller="Auth" asp-action="ImpersonateUser">
                                        <input type="hidden" name="ID" value="@user.ID" />

                                        <button type="submit" class="btn btn-sm btn-primary">Login</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-center">No users found.</p>
        }
    </div>
</div>



